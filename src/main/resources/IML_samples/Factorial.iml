program Factorial
global
  fun factRec(n:int64) returns const fact:int64
  do
    if n = 0 then
      fact init := 1
    else
      fact init := n * factRec(n-1)
    endif
  endfun;

  fun fact(n:int64) returns var fact:int64
  local
    var i:int64
  do
    fact init := 1;
    i    init := 2;
    while i <= n do
      fact := fact * i;
      i    := i + 1
    endwhile
  endfun;

  n:int64
do
  debugin n init;
  debugout factRec(n);
  debugout fact(n)
endprogram
